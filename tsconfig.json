{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "vitest/globals"
    ],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~~/*": ["./*"],
      "@@/*": ["./*"],
      "~/*": ["./*"],
      "@/*": ["./*"],
      "assets/*": ["assets/*"],
      "public/*": ["public/*"],
      "#imports": ["./.nuxt/imports.d.ts"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx", 
    "**/*.vue",
    "**/*.js",
    "**/*.jsx",
    ".nuxt/imports.d.ts",
    ".nuxt/nuxt.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "legacy-esmuseum-nuxt3",
    ".nuxt/dev/**/*",
    ".nuxt/dist/**/*",
    ".output/**/*"
  ]
}