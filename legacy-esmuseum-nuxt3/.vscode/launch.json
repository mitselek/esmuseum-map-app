{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Development Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/nuxt/bin/nuxt.mjs",
      "args": ["dev", "--host", "0.0.0.0"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development"
      },
      "presentation": {
        "hidden": false,
        "group": "Development",
        "order": 1
      }
    },
    {
      "name": "Launch Test Suite",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "args": ["run"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "test"
      },
      "presentation": {
        "hidden": false,
        "group": "Testing",
        "order": 1
      }
    },
    {
      "name": "Debug Test Suite",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "args": ["run", "--reporter=verbose"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "test"
      },
      "stopOnEntry": false,
      "presentation": {
        "hidden": false,
        "group": "Testing",
        "order": 2
      }
    },
    {
      "name": "Constitutional Compliance Check",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/eslint/bin/eslint.js",
      "args": [".", "--fix", "--config", ".config/eslint.config.js"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "presentation": {
        "hidden": false,
        "group": "Quality",
        "order": 1
      }
    },
    {
      "name": "Build Production",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/nuxt/bin/nuxt.mjs",
      "args": ["build"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "production"
      },
      "presentation": {
        "hidden": false,
        "group": "Build",
        "order": 1
      }
    }
  ],
  "compounds": [
    {
      "name": "Full Constitutional Development",
      "configurations": [
        "Constitutional Compliance Check",
        "Launch Test Suite",
        "Launch Development Server"
      ],
      "presentation": {
        "hidden": false,
        "group": "Workflow",
        "order": 1
      }
    }
  ]
}
