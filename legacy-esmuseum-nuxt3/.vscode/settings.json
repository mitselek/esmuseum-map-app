{
  // ESMuseum Constitutional Development Settings
  // F017 Phase 2: Enhanced Workflow Configuration

  // Constitutional Article I: Vue 3 Composition API Mandate
  "vue.features.codeActions.enabled": true,
  "vue.inlayHints.inlineHandlerLeading": true,
  "vue.inlayHints.missingProps": true,
  "vue.inlayHints.optionsWrapper": true,
  "vue.inlayHints.vBindShorthand": true,

  // Constitutional Article II: TypeScript-First Development
  "typescript.preferences.noSemicolons": "off",
  "typescript.preferences.quoteStyle": "single",
  "typescript.preferences.includePackageJsonAutoImports": "auto",
  "typescript.suggest.autoImports": true,
  "typescript.suggest.classMemberSnippets.enabled": true,
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.suggest.enabled": true,
  "typescript.suggest.includeAutomaticOptionalChainCompletions": true,
  "typescript.suggest.includeCompletionsForImportStatements": true,
  "typescript.preferences.importModuleSpecifier": "relative",

  // Constitutional Article III: Test-Driven Feature Development
  "vitest.enable": true,
  "vitest.commandLine": "npm run test",
  "testing.automaticallyOpenPeekView": "failureInVisibleDocument",
  "testing.openTesting": "neverOpen",
  "coverage-gutters.coverageBaseDir": "coverage",
  "coverage-gutters.coverageReportFileName": "lcov.info",
  "coverage-gutters.showGutterCoverage": true,
  "coverage-gutters.showLineCoverage": true,

  // Constitutional Article IV: i18n-First User Interface
  "i18n-ally.localesPaths": ["locales"],
  "i18n-ally.keystyle": "nested",
  "i18n-ally.defaultNamespace": "common",
  "i18n-ally.enabledParsers": ["json", "yaml", "js", "ts"],
  "i18n-ally.sourceLanguage": "en",
  "i18n-ally.displayLanguage": "et",
  "i18n-ally.enabledFrameworks": ["vue", "nuxt"],

  // Constitutional Article V: Entu API Integration Standards
  "rest-client.environmentVariables": {
    "dev": {
      "baseUrl": "https://api.entu.app/api2",
      "authUrl": "https://api.entu.app/oauth2"
    }
  },

  // Constitutional Article VI: Performance-First SPA Architecture
  "importCost.mediumPackageSize": 50,
  "importCost.largePackageSize": 100,
  "importCost.smallPackageColor": "#7cc36e",
  "importCost.mediumPackageColor": "#7cc36e",
  "importCost.largePackageColor": "#d44e40",
  "emmet.showExpandedAbbreviation": "inMarkupAndStylesheetFilesOnly",

  // Constitutional Article VII: Component Modularity Principle
  "todo-tree.filtering.excludeGlobs": ["**/node_modules/**", "**/coverage/**"],
  "todo-tree.general.tags": [
    "TODO",
    "FIXME",
    "CONSTITUTIONAL",
    "ARTICLE",
    "COMPLIANCE",
    "QUALITY_GATE"
  ],
  "todo-tree.highlights.customHighlight": {
    "CONSTITUTIONAL": {
      "icon": "book",
      "type": "tag",
      "foreground": "#ffffff",
      "background": "#0066cc",
      "iconColour": "#0066cc"
    },
    "ARTICLE": {
      "icon": "law",
      "type": "tag",
      "foreground": "#ffffff",
      "background": "#008000",
      "iconColour": "#008000"
    },
    "COMPLIANCE": {
      "icon": "check",
      "type": "tag",
      "foreground": "#ffffff",
      "background": "#ff6600",
      "iconColour": "#ff6600"
    },
    "QUALITY_GATE": {
      "icon": "shield",
      "type": "tag",
      "foreground": "#ffffff",
      "background": "#8b0000",
      "iconColour": "#8b0000"
    }
  },

  // Constitutional Article VIII: Documentation-Driven Development
  "markdown.extension.toc.levels": "2..4",
  "markdown.extension.toc.orderedList": false,
  "markdown.extension.toc.updateOnSave": true,
  "markdownlint.config": {
    "MD013": false,
    "MD033": false,
    "MD041": false
  },

  // Constitutional Article IX: Responsive Design Requirements
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.CustomBrowser": "chrome",
  "liveServer.settings.useWebExt": false,

  // General Development Quality
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.rulers": [200], // Constitutional Article VII: Component size limit

  // Tailwind CSS Integration
  "tailwindCSS.includeLanguages": {
    "vue": "html",
    "vue-html": "html"
  },
  "tailwindCSS.experimental.classRegex": [
    ["class:\\s*['\"`]([^'\"`,]*)['\"`]", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ],

  // ESLint Configuration for Constitutional Compliance
  "eslint.workingDirectories": ["."],
  "eslint.options": {
    "overrideConfigFile": "./.config/eslint.config.js"
  },
  "eslint.validate": ["javascript", "typescript", "vue"],

  // File Associations
  "files.associations": {
    "*.vue": "vue",
    "*.md": "markdown",
    "*.yaml": "yaml",
    "*.yml": "yaml"
  },

  // Git Integration
  "gitlens.codeLens.enabled": true,
  "gitlens.codeLens.authors.enabled": true,
  "gitlens.codeLens.recentChange.enabled": true,
  "gitlens.currentLine.enabled": true,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.statusBar.enabled": true,

  // Copilot Configuration for Constitutional Development
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "vue": true,
    "typescript": true,
    "javascript": true
  },
  "github.copilot.inlineSuggest.enable": true,

  // Search and File Explorer
  "search.exclude": {
    "**/node_modules": true,
    "**/coverage": true,
    "**/.git": true,
    "**/.nuxt": true,
    "**/.output": true,
    "**/dist": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/.nuxt": true,
    "**/.output": true
  },

  // Terminal Configuration
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.cwd": "${workspaceFolder}",

  // Spec-Driven Development Workflow
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#0066cc",
    "titleBar.activeForeground": "#ffffff",
    "statusBar.background": "#0066cc",
    "statusBar.foreground": "#ffffff",
    "statusBar.noFolderBackground": "#0066cc",
    "activityBar.background": "#e6f2ff",
    "activityBar.foreground": "#0066cc"
  },

  // Custom Snippets for Constitutional Compliance
  "editor.snippetSuggestions": "top",
  "editor.suggest.snippetsPreventQuickSuggestions": false,

  // Feature Development Workflow Reminders
  "workbench.startupEditor": "readme",
  "workbench.tips.enabled": true
}
